@model AMS.Areas.DashBoard.Models.ViewModels.AccomodationTypeActionModels
    @if (Model != null)
    {
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" >Create Accomodation Types</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <div class="form-group">
                    <label >Name</label>
                    <input  name="Name"  class="form-control" placeholder="Enter Name">
                  
                </div>
                <div class="form-group">
                    <label>Description</label>
       
                    <textarea   name="Description" class="form-control" rows="10" placeholder="Enter Accomodation Type Description"></textarea>
                </div>
             </form>
            <div id="errDiv">
                  
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button  id="actionButton" type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>
    }
    <script>
        $("#actionButton").click(function(){
            $.ajax({
                url:'@Url.Action("Action","AccomodationTypes")',
                type:"post",
                data:$("#actionForm").serialize()

            }).done(function(data) {
                console.log("Subhrajit");
                if (true) {

                    location.reload(true);
                    console.log("Subhrajit1");
                    
                }
                else {
                    $("#errDiv").html(data.message);
                    console.log("Subhrajit2");
                }



            });
        });
    </script>
